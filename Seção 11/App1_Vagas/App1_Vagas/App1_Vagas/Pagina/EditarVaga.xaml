<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Vagas.Pagina.EditarVaga">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="VagaNome" Placeholder="Vaga"/>
            <Entry x:Name="Empreza" Placeholder="Empreza"/>
            <Entry x:Name="Quantidade" Placeholder="Quantidade"/>
            <Entry x:Name="Cidade" Placeholder="Cidade"/>
            <Entry x:Name="Salario" Placeholder="Salario"/>
            <Label Text="Descrição do cargo"/>
            <Editor x:Name="Descricao" HeightRequest="200"/>
            <StackLayout>
                <Label Text="Tipo Contratação"/>
                <Label Text="CLT" />
                <Switch x:Name="TipoContratacao" />
                <Label Text="PJ"/>
            </StackLayout>
            <Entry x:Name="Telefone" Placeholder="Telefone"/>
            <Entry x:Name="Email" Placeholder="Email"/>
            <Button Text="Salvar" Clicked="GoSalvar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>