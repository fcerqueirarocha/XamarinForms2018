<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:master="clr-namespace:App02_TipoPaginaXF.TipoPagina.Master"
             x:Class="App02_TipoPaginaXF.TipoPagina.Master.Master">
    
    <MasterDetailPage.Master>
        <!--Menu-->
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="pagina 1" TextColor="Black" Clicked="MudarPagina1" />
                <Button Text="pagina 2" TextColor="Black" Clicked="MudarPagina2" />
                <Button Text="Conteudo" TextColor="Black" Clicked="MudarPagina3" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        <!--COnteudo-->
        <master:Conteudo/>
    </MasterDetailPage.Detail>
    
</MasterDetailPage>