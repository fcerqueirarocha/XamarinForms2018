<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.TableViewPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection Title="backup">
                        <SwitchCell Text="Backup das images" On="False" />
                        <SwitchCell Text="Backup das texto" On="False" />
                        <SwitchCell Text="Backup das chat" On="False" />
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="backup frequencia" />
                                <Slider HorizontalOptions="FillAndExpand" Minimum="0" Maximum="7"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="seguraça">
                        <SwitchCell Text="senhas criptografadas" On="True" />
                    </TableSection>
                </TableRoot>
                
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>