<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.TimePikerPage">
    <ContentPage.Content>
        <StackLayout>
            <TimePicker x:Name="tmHora" 
                        TextColor="Blue"
                        Format="HH:mm"
                        Time="12:30"
                        Unfocused="TimePicker_Unfocused"/>
            <Label x:Name="lbltime" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>